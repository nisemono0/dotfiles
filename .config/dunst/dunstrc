# See dunst(5) for all configuration options

[global]
    ### Display ###
    monitor = 0
    follow = keyboard

    ### Geometry ###
    width = 450
    height = 400
    origin = top-right
    offset = 10x42
    scale = 0
    notification_limit = 7

    ### Progress bar ###
    progress_bar = true
    progress_bar_height = 10
    progress_bar_frame_width = 1
    progress_bar_min_width = 150
    progress_bar_max_width = 300

    ### Notifications ###
    indicate_hidden = yes
    shrink = no
    transparency = 20
    separator_height = 5
    padding = 1
    horizontal_padding = 8
    text_icon_padding = 0
    frame_width = 3
    frame_color = "#6273A7"
    separator_color = frame
    sort = yes
    idle_threshold = 120

    ### Text ###
    font = Monospace 11
    line_height = 0
    markup = full
    format = "<b>%s</b>\n%b"
    alignment = left
    vertical_alignment = center
    show_age_threshold = 60
    word_wrap = yes
    ellipsize = middle
    ignore_newline = no
    stack_duplicates = false
    hide_duplicate_count = false
    show_indicators = yes

    ### Icons ###
    icon_position = left
    min_icon_size = 22
    max_icon_size = 150
    icon_path = /usr/share/icons/Arc/status/22:/usr/share/icons/Arc/devices/22:/usr/share/icons/Arc/mimetypes/22

    ### History ###
    sticky_history = yes
    history_length = 20

    ### Misc/Advanced ###
    dmenu = ~/.scripts/dunst/dmenu-dunst.sh
    browser = /usr/bin/xdg-open
    always_run_script = true
    title = Dunst
    class = Dunst
    corner_radius = 0
    ignore_dbusclose = false

    ### Mouse ###
    mouse_left_click = close_current
    mouse_middle_click = context
    mouse_right_click = close_all

# Experimental features that may or may not work correctly. Do not expect them
# to have a consistent behaviour across releases.
[experimental]
    per_monitor_dpi = true

[urgency_low]
    background = "#4B5987"
    foreground = "#C3CBE1"
    timeout = 5

[urgency_normal]
    background = "#4B5987"
    foreground = "#C3CBE1"
    timeout = 5

[urgency_critical]
    background = "#900000"
    foreground = "#FFFFFF"
    frame_color = "#FF0000"
    timeout = 0
